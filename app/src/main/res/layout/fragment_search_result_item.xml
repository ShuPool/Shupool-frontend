<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/bg_white" >

    <Button
        android:id="@+id/btnSelect"
        android:layout_width="50dp"
        android:layout_height="38dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/bg_black"
        android:textSize="15sp"
        android:gravity="center"
        android:background="@drawable/kn_bg_white_soild_gray_stroke_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/poi_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bg_black"
        android:textSize="15sp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@id/poi_address"
        app:layout_constraintBottom_toTopOf="@id/poi_address" />

    <TextView
        android:id="@+id/poi_address"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:textColor="@color/bg_gray"
        android:textSize="13sp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/poi_name"
        app:layout_constraintRight_toRightOf="@id/poi_name"
        app:layout_constraintBottom_toBottomOf="@id/btnSelect"/>

</androidx.constraintlayout.widget.ConstraintLayout>